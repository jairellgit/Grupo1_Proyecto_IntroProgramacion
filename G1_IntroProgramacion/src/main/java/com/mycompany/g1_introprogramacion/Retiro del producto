import javax.swing.JOptionPane;
import java.util.ArrayList;

class Producto {
    String nombre;
    int cantidad;

    public Producto(String nombre, int cantidad) {
        this.nombre = nombre;
        this.cantidad = cantidad;
    }
}

public class GestionInventario {

    public static void main(String[] args) {
        // Crear una lista de productos
        ArrayList<Producto> inventario = new ArrayList<>();

        // Agregar algunos productos de ejemplo
        inventario.add(new Producto("Producto1", 10));
        inventario.add(new Producto("Producto2", 5));
        inventario.add(new Producto("Producto3", 8));

        // Mostrar el inventario actual
        mostrarInventario(inventario);

        // Solicitar al usuario que elija un producto para retirar
        String productoRetirar = JOptionPane.showInputDialog("Ingrese el nombre del producto que desea retirar:");

        // Buscar el producto en el inventario
        Producto productoSeleccionado = null;
        for (Producto producto : inventario) {
            if (producto.nombre.equalsIgnoreCase(productoRetirar)) {
                productoSeleccionado = producto;
                break;
            }
        }

        // Realizar el retiro si el producto se encuentra
        if (productoSeleccionado != null) {
            inventario.remove(productoSeleccionado);
            JOptionPane.showMessageDialog(null, "Producto retirado con éxito.");
        } else {
            JOptionPane.showMessageDialog(null, "Producto no encontrado en el inventario.");
        }

        // Mostrar el inventario actualizado
        mostrarInventario(inventario);
    }

    // Método para mostrar el inventario
    private static void mostrarInventario(ArrayList<Producto> inventario) {
        StringBuilder mensaje = new StringBuilder("Inventario actual:\n");
        for (Producto producto : inventario) {
            mensaje.append(producto.nombre).append(": ").append(producto.cantidad).append(" unidades\n");
        }
        JOptionPane.showMessageDialog(null, mensaje.toString());
    }
}
